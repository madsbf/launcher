<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="appViewModel" type="me.madsbf.launcher.viewmodel.AppViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:clipChildren="false"
        app:state="@{appViewModel.state}"
        android:onClick="@{appViewModel.onClickApp}"
        android:background="#ffffff"
        android:foreground="?android:attr/selectableItemBackground">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:iconSwatch="@{appViewModel.iconSwatch}"
            android:id="@+id/colorBackground"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                tools:src="@mipmap/ic_launcher"
                android:id="@+id/image"
                android:src="@{appViewModel.icon}"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Launcher"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text="@{appViewModel.title}"
                app:textSwatch="@{appViewModel.iconSwatch}"/>
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            app:fabSize="mini"
            android:layout_marginBottom="-24dp"
            android:src="@drawable/ic_clear_24dp"
            app:deleteState="@{appViewModel.state}"
            android:onClick="@{appViewModel.onClickDelete}"
            tools:visibility="visible"
            android:visibility="invisible"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#20000000"
            android:alpha="0"
            app:overlayState="@{appViewModel.state}"/>
    </FrameLayout>
</layout>
